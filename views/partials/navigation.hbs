            <div class="modal-body">
                <form class="agregar-produc-form" action="/iniciosesion" method="POST">
                    <label for="mail">Mail:</label><br>
                    <input class="input-modal" type="text" id="mail" name="mail"><br>
                    <label for="contrasena">Contraseña:</label><br>
                    <input class="input-modal" type="password" id="constrasena" name="contrasena"><br>
                    <span id="error-modal"></span>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="sumbit" class="btn btn-success">Aceptar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>