<h1 class="tienda-title">CARRITO <i class="fas fa-shopping-cart"></i></h1>
    <div class="carrito-subtitulo">
        <h2>TUS PRODUCTOS</h2>
    </div>
    <section class="section-tabla-carrito">
        <table class="table" id="table">
            <thead class="tabla-encabezado">
                <tr class="tabla-encabezado2">
                    <th>PRODUCTO</th>
                    <th>DESCRIPCION</th>
                    <th>CANTIDAD</th>
                    <th>PRECIO</th>
                </tr>
            </thead>
            <tbody>
                {{#each carrito}}
                <tr>
                    <td class="img-carrito-container"><img class="img-prod-carrito" src="imagenes/producto.jpg" alt=""></td>
                    <td><p>{{nombre}}</p></td>
                    <td>
                        <div class="carrito-cantidad">
                            <input type="number" id="quantity" class="cantidad" name="quantity" onclick="calcularTotal()" min="1" max="10" value="{{cantidad}}"> 
                        </div>
                    </td>
                    <td>
                        <span class="carrito-precio">${{precio}}</span>
                        <input type="text" name="precio" class="precio-producto" value="{{precio}}" style="display: none;">
                        <a href="/tienda/eliminarcarrito/{{id}}" class="btn btn-danger">Eliminar producto</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot></tfoot>
        </table>
        <div class="datos-compra">
            <p class="datos-compra-titulo">DETALLES DEL PEDIDO</p>
            <table class="datos-compra-tabla">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total de la orden</td>
                        <td id="total-orden"></td>
                    </tr>
                    {{!-- <tr>
                        <td>Costo de env√≠o</td>
                        <td>$320</td>
                    </tr> --}}
                </tbody>
            </table>
        </div>
    </section>

{{!-- JS --}}
<script src="/js/carrito.js"></script>
