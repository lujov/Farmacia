<h1 class="tienda-title">TIENDA ONLINE</h1>
<ul class="tienda-menu">
    <li>Dermocosmética</li>
    <li>Suplementos</li>
    <li>Homeopatía</li>
</ul>
<div id="tienda-productos">

{{!-- tienda para admin --}}
{{#if user}}
    {{#each tienda}}
        <div class="productos">
            <img class="img-productos" src="/imagenes/imagen-1.jpg" alt="">
            <h3 class="nombre-productos">{{nombre}}</h3>
            <h3 class="precio-productos">${{precio}}</h3>
            <button class="boton-productos">Agregar al carrito</button>
            <a href="/tienda/eliminar/{{id}}" class="btn btn-danger">Eliminar producto</a>
            <a href="/tienda/editar/{{id}}" class="btn btn-warning">Editar producto</a>
        </div>
    {{else}}
    {{!-- en el caso de no haber productos en la tienda, va a aparecer este cuadro --}}
        <h3 class="nombre-productos">No hay productos aún.</h3>
        <a href="/tienda/agregarproducto" class="btn btn-success">Agregar producto nuevo</a>
    {{/each}}

{{else}}
{{!-- tienda para usuarios --}}

    {{#each tienda}}
        <div class="productos">
            <img class="img-productos" src="/imagenes/imagen-1.jpg" alt="">
            <h3 class="nombre-productos">{{nombre}}</h3>
            <h3 class="precio-productos">${{precio}}</h3>
            <button class="boton-productos">Agregar al carrito</button>
        </div>
    {{else}}
    {{!-- en el caso de no haber productos en la tienda, va a aparecer este cuadro --}}
        <h3 class="nombre-productos">No hay productos aún.</h3>
        <a href="/tienda/agregarproducto" class="btn btn-success">Agregar producto nuevo</a>
    {{/each}}

{{/if}}
</div>